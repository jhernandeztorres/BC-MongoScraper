<div class="container">
  <div class="jumbotron">
    <p class="text-center">Y Combinator Scraper</p>
  </div>
</div>

<div class="container">
  <h3>Saved articles</h3>
  {{#each article}}
  <div class="card bg-light mb-3">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <a href="{{link}}" class="card-link" target="_blank">View Article</a>
      <p></p>
      <a data-articleId={{_id}} class="btn btn-primary unsave-btn">Remove from saved</a>
      <a data-articleId={{_id}} class="btn btn-primary note-btn">Add note</a>
      <a data-articleId={{_id}} class="btn btn-primary shownote-btn">Show notes</a>
      <div data-articleId={{_id}} id="{{_id}}notes"></div>
      <div data-articleId={{_id}} id="{{_id}}savednotes"></div>
    </div>
  </div>
  {{/each}}
</div>